{
  "name": "@harpy-js/core",
  "version": "0.6.0",
  "description": "Harpy - A powerful Bun-native React/JSX SSR framework with automatic hydration and i18n support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "default": "./dist/runtime/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./client/hydration": {
      "types": "./dist/client/hydration-runtime.d.ts",
      "default": "./dist/client/hydration-runtime.js"
    },
    "./client/getActiveItemId": {
      "types": "./dist/client/getActiveItemId.d.ts",
      "default": "./dist/client/getActiveItemId.js"
    },
    "./client/Link": {
      "types": "./dist/client/Link.d.ts",
      "default": "./dist/client/Link.js"
    }
  },
  "bin": {
    "harpy": "./dist/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "src"
  ],
  "scripts": {
    "build": "bun build:ts && cp src/core/live-reload-client.js dist/core/",
    "build:ts": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "bun",
    "react",
    "jsx",
    "ssr",
    "hydration",
    "typescript",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "optionalDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-fastify": "^11.0.0"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "esbuild": "^0.24.2",
    "reflect-metadata": "^0.2.2",
    "@tailwindcss/postcss": "^4.0.0",
    "postcss": "^8.4.49"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "d7a4f2ad108c68f2b441ad0c24385b45b1e046a3"
}
