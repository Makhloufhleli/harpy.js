{
  "name": "@harpy-js/cli",
  "version": "0.5.0",
  "description": "Harpy CLI - Create and manage Harpy projects with React/JSX and i18n support on Bun",
  "main": "dist/index.js",
  "bin": {
    "harpy": "./bin/harpy.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "harpy",
    "bun",
    "react",
    "jsx",
    "ssr",
    "cli",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "commander": "^11.1.0",
    "ora": "^5.4.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "gitHead": "d7a4f2ad108c68f2b441ad0c24385b45b1e046a3"
}
